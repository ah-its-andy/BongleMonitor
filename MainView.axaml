							Background="#F3F3F3"
							BorderBrush="#E5E5E5"
							BorderThickness="0,0,0,3"
							Padding="5">
						<TextBlock Text="確認操作"></TextBlock>
					</Border>
					<TextBlock x:Name="txtConfirm"
								Grid.Row="1" 
							   VerticalAlignment="Center"
							   HorizontalAlignment="Center"
							   Text="是否確認關機"></TextBlock>
					<Grid Grid.Row="2" 
								Margin="10"
								HorizontalAlignment="Stretch">
						<Button x:Name="btnConfirmOk" 
							HorizontalAlignment="Left"
								VerticalAlignment="Stretch"
								HorizontalContentAlignment="Center"
								VerticalContentAlignment="Center"
								Width="60"
								Content="確認"></Button>
						<Button x:Name="btnConfirmCancel"
							Width="60" HorizontalAlignment="Right"
								VerticalAlignment="Stretch"
								HorizontalContentAlignment="Center"
								VerticalContentAlignment="Center"
								Content="取消"></Button>
					</Grid>
				</Grid>
			</Border>

		</Grid>
	</Grid>
</UserControl>
